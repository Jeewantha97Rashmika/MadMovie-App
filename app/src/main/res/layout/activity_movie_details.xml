<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"

    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#A67474"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/arrow" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="530dp"
                    android:layout_marginTop="200dp"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="217dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="132dp"
                                android:layout_height="194dp"
                                android:src="@drawable/images" />

                            <LinearLayout
                                android:layout_width="347dp"
                                android:layout_height="196dp"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1.5"
                                android:orientation="vertical">

                                <!-- namemovie-->
                                <TextView
                                    android:id="@+id/textViewMovieName"
                                    android:layout_width="248dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="3dp"
                                    android:text="Aladhin"

                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textSize="22sp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="181dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="182dp"
                                        android:orientation="vertical">

                                        <!--     director-->
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="34dp"
                                            android:layout_marginLeft="10dp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textDirector"
                                                android:layout_width="111dp"
                                                android:layout_height="27dp"
                                                android:layout_marginTop="5dp"
                                                android:gravity="left"
                                                android:text="Director"
                                                android:textSize="14sp" />

                                            <TextView
                                                android:id="@+id/textDirectorValue"
                                                android:layout_width="252dp"
                                                android:layout_height="57dp"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginTop="5dp"
                                                android:gravity="left"
                                                android:text="George Miller"
                                                android:textSize="12sp" />
                                        </LinearLayout>

                                        <!--type-->


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textimdb"
                                                android:layout_width="112dp"
                                                android:layout_height="27dp"
                                                android:layout_marginTop="5dp"
                                                android:gravity="left"
                                                android:text="IMDB"
                                                android:textSize="14sp" />

                                            <TextView
                                                android:id="@+id/textimdbValue"
                                                android:layout_width="258dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginTop="5dp"
                                                android:gravity="left"
                                                android:text="6.9"
                                                android:textSize="12sp" />

                                        </LinearLayout>

                                        <!--Run Time-->

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textRunTime"
                                                android:layout_width="113dp"
                                                android:layout_height="27dp"
                                                android:layout_marginTop="5dp"
                                                android:gravity="left"
                                                android:text="Run Time"
                                                android:textSize="14sp" />

                                            <TextView
                                                android:id="@+id/textRunTimeValue"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginTop="5dp"
                                                android:gravity="left"
                                                android:text="88 min"
                                                android:textSize="12sp" />

                                        </LinearLayout>

                                        <!--  Country-->
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="39dp"
                                            android:layout_marginLeft="10dp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textYear"
                                                android:layout_width="113dp"
                                                android:layout_height="27dp"
                                                android:layout_marginTop="5dp"
                                                android:gravity="left"
                                                android:text="Year"
                                                android:textSize="14sp" />

                                            <TextView
                                                android:id="@+id/textYearValue"
                                                android:layout_width="258dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginTop="5dp"
                                                android:gravity="left"
                                                android:text="18879"
                                                android:textSize="12sp" />

                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="36dp"
                                            android:layout_marginLeft="10dp"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textCountry"
                                                android:layout_width="115dp"
                                                android:layout_height="27dp"
                                                android:layout_marginTop="5dp"
                                                android:gravity="left"
                                                android:text="Country"
                                                android:textSize="14sp" />

                                            <TextView
                                                android:id="@+id/textCountryValue"
                                                android:layout_width="258dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginTop="5dp"
                                                android:gravity="left"
                                                android:text="Australia"
                                                android:textSize="12sp" />

                                        </LinearLayout>

                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- secound row-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="18dp"
                            >


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textType"
                                    android:layout_width="121dp"
                                    android:layout_height="27dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="left"
                                    android:text="Type"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/textTypeValue"
                                    android:layout_width="251dp"
                                    android:layout_height="57dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="left"
                                    android:text="Movie"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <!--    ////////////////-->

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp">

                                <TextView
                                    android:id="@+id/textPlot"
                                    android:layout_width="121dp"
                                    android:layout_height="27dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="left"
                                    android:text="Plot"
                                    android:textSize="14sp" />
                                <TextView
                                    android:id="@+id/textPlotValue"
                                    android:layout_width="252dp"
                                    android:layout_height="57dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="left"
                                    android:text="in a self-destructing world a vengeful Australian policeman sets out to stop a violent motorcycle gang"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <!--Genre-->

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp">

                                <TextView
                                    android:id="@+id/textGenre"
                                    android:layout_width="121dp"
                                    android:layout_height="27dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="left"
                                    android:text="Genre"
                                    android:textSize="14sp" />
                                <TextView
                                    android:id="@+id/textGenreValue"
                                    android:layout_width="258dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="left"
                                    android:text="Action, Adventure,sci-fi,thriller"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <!--Actors-->

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp">

                                <TextView
                                    android:id="@+id/textActors"
                                    android:layout_width="121dp"
                                    android:layout_height="27dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="left"
                                    android:text="Actors"
                                    android:textSize="14sp" />
                                <TextView
                                    android:id="@+id/textActorsValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="left"
                                    android:text="Mel Gibson,Joanne Samuel,Hugh Keays-byrne"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <!--  Awards-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="10dp">

                                <TextView
                                    android:id="@+id/textAwards"
                                    android:layout_width="121dp"
                                    android:layout_height="27dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="left"
                                    android:text="Awards"
                                    android:textSize="14sp" />
                                <TextView
                                    android:id="@+id/textAwardsValue"
                                    android:layout_width="258dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="left"
                                    android:text="5 wins and 7 nominations."
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>